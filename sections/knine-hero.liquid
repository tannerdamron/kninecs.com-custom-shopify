<style>
  
  .knine-text {
    position: absolute;
    top: 10%;
    left: 55px;
    width: 60%;
    max-width: 590px;
    z-index: 1;
  }
  
  .knine-text p {
    color: #fff;
    font-weight: 600;
    font-size: 1.1em;
    margin-bottom: 0;
  }
  
  .knine-text h1 {
    text-transform: uppercase;
    font-size: 2.8em;
    line-height: 1.3;
    letter-spacing: 2px;
    margin-bottom: 35px;color: #fff;
  }
  
  .knine-text button {

    font-family: canada-type-gibson,sans-serif;
    text-transform: uppercase;
    height: 60px;
    width: 277px;
    font-weight: 600;
    color: #fff;
    letter-spacing: 1px;
    background: #83c2d1;
    border: 1px solid #fff;
    border-radius: 5px;
    background: {{ section.settings.button_color }};
  }
  
  .knine-text button:hover {
   background-color: {{ section.settings.button_hover }};
   border: {{ section.settings.button_border }} 3px solid;
   color: {{ section.settings.button_color }};
  }
  
  @media screen and (max-width:1050px) {
    
  	.knine-text {
    	left: 50px;
	  }
      
      .knine-text {
    	width: 100%;
        top: 1%;
	  }  
      
      .knine-text h1 {
      font-size: 1.2em;
      line-height: 1.55;
    	}
      
      .knine-text button {
        height: 45px;
		width: 150px;
        font-size: 11px;
        margin-top: 20px;
      }
    
  }
    
    @media screen and (max-width:480px) {
      
      .knine-text {
    	left: 30px;
	  }
      
      .knine-text {
    	width: 100%;
        top: 1%;
	  }  
      
      .knine-text h1 {
      font-size: 1.2em;
      line-height: 1.55;
    	}
      
      .knine-text button {
        height: 45px;
		width: 150px;
        font-size: 11px;
        margin-top: 20px;
      }
      
    }
    
  
  
</style>

<div data-section-id="{{ section.id }}" data-section-type="homepage-section" style="width: 100vw;margin-left: -6%;">
  <div class="row">
	<div class="home-hero medium-down--hide">
      {% if section.settings.checkbox == true  %}
      <div class="knine-text">
    	<p style="color:{{ section.settings.smalltext_color }};">{{ section.settings.hero_text }}</p>
    	<h1>{{ section.settings.hero_bigtext }}</h1>
        <a href="{{ section.settings.herolink }}"><button>{{ section.settings.hero_button }}</button></a>
      </div>{% endif %}
      	<a href="{{ section.settings.herolink }}">
        	<img alt="{{ section.settings.image.alt | escape }}" src="{{ section.settings.image | img_url: '1600x' }}" style="width:100%;filter: saturate(2);" />
      	</a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Knine Hero Image",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Homepage desktop hero image"
      },
	  {
   		"type":      "checkbox",
   		"id":        "checkbox",
   		"label":     "Enable Hero Text and Button",
   		"default":   false,
   		"info":      "Show/Hide the text and button"
	  },
	  {
        "type": "text",
        "id": "herolink",
        "label": "Homepage Hero Images URL"
      },
	  {
        "type": "text",
        "id": "hero_bigtext",
        "label": "Homepage Hero Big Text"
      },
      {
        "type": "text",
        "id": "hero_button",
        "label": "Homepage Hero Button Text"
      },
	  {
        "type": "color",
        "id": "button_color",
        "label": "Button background color",
        "default": "#4760ea"
      },
	  {
        "type": "color",
        "id": "button_border",
        "label": "Button border color",
        "default": "#4760ea"
      },
	  {
        "type": "color",
        "id": "button_hover",
        "label": "Button hover color",
        "default": "#fff"
      }
    ],
    "presets": [
      {
        "name": "Knine Hero Image",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}
